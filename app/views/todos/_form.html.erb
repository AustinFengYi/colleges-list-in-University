<style>
  .container{
    margin-top: 10px;
  }

.format{
  margin-top: 10px;
}

.label-default{
  display: inline-block;
  margin: 15px;
  padding: 5px;
}

.remove{
  color: red;
}
  
</style>

<div class="container">
  <div class="row">
    
      <%= nested_form_for(@todo) do |f| %>
         <% if @todo.errors.any? %>
            <ul>
            <% @todo.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          <% end %>






        <div class="col-md-4 format">
          <div class="form">
            <div class="form-group">
              <%= f.label :name, "部門名稱" %>
              <%= f.text_field :name,class:"form-control" %>
            </div> 

            <div class="form-group">
              <%= f.label :introduction, "相關介紹" %>
              <%= f.text_area :introduction,class:"form-control" %>
            </div> 
          </div>
        </div>
        
        <div class="clearfix"></div>

        <!--nested_form tasks-->
        <%= f.fields_for :tasks do |t| %>
          <div class="col-md-4 format">
            <div class="form">
              <div class="form-group">
                <%= t.label :name, "科系名稱" %>
                <%= t.text_field :name,class:"form-control" %>
              </div> 

              <div class="form-group">
                <%= t.label :introduction, "相關介紹" %>
                <%= t.text_area :introduction,class:"form-control" %>
              </div>     

              <%= t.link_to_remove "移除此待辦事項",class:"remove" %>

            </div>
            <hr>
          </div>
        <% end %>
        

        <%= f.link_to_add "新增相關科系", :tasks,class:"label label-default" %>

        <div class="col-md-12 text-center format">
          <%= f.submit class:"actions btn btn-default" %>
          <%= link_to "Cancel", root_path,class:"btn btn-danger" %>
        </div>
      
      <% end %>
    
  </div>
</div>








